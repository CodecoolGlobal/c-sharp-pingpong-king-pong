<Window x:Class="Pong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong"
        mc:Ignorable="d"
        Title="PingPong" Height="600" Width="800" ResizeMode="NoResize">
    <Border BorderBrush="Black" BorderThickness="5">
        <Canvas x:Name="GameArea"  Height="600" Width="776" KeyDown="Canvas_KeyDown" Focusable="True" ClipToBounds="True">
        </Canvas>
    </Border>
</Window>
